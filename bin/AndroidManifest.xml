<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.appmunki.gigs"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="18" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/FoodieTheme" >
       
        <activity
            android:name="com.appmunki.gigs.restaurant.RestaurantListActivity"
            android:label="@string/title_resturant_list"
            android:theme="@style/FoodieTheme" >
        </activity>
        <activity
            android:name="com.appmunki.gigs.restaurant.RestaurantDetailActivity"
            android:label="@string/title_resturant_detail"
            android:parentActivityName="com.appmunki.gigs.restaurant.RestaurantListActivity"
            android:theme="@style/FoodieTheme" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.appmunki.gigs.ResturantListActivity" />
        </activity>
        <activity
            android:name="com.appmunki.gigs.LoginActivity"
            android:label="@string/title_activity_login"
            android:windowSoftInputMode="adjustResize|stateVisible"  >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>