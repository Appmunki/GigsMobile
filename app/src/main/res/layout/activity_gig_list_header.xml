<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tool="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="@dimen/gig_list_height">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/gig_list_height"
        android:src="@drawable/staticmap"
        android:id="@+id/gigheaderimageView"
        android:contentDescription="gigheaderimageView"
        android:scaleType="centerCrop" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/gigheadercounttextView"
        android:layout_marginBottom="16dp"
        android:layout_alignParentBottom="true"
        tool:text="10 Jobs near you"
        style="@android:style/TextAppearance.Medium.Inverse" />

</RelativeLayout>