<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.appmunki.gigsmobile.controllers.activities.MessagingActivity">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/messagerecipientEditText"/>

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/messagehistoryListView"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="false"
        android:layout_above="@+id/messagebodyEditText"
        android:layout_below="@+id/messagerecipientEditText"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Button"
        android:id="@+id/messagesendbutton"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/messagehistoryListView"
        android:layout_alignEnd="@+id/messagehistoryListView"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/messagebodyEditText"
        android:layout_toLeftOf="@+id/messagesendbutton"
        android:layout_alignParentBottom="true"/>



</RelativeLayout>
