<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_list_item_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="?android:attr/listPreferredItemPaddingLeft">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/drawer_list_item_imageView"
        android:contentDescription="drawer_list_item_imageview"
        android:src="@drawable/ic_gig_icon" />

    <TextView
        android:id="@+id/drawer_list_item_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceListItem"
        android:textColor="@color/gigtheme_color"
        tools:text="My Gigs"
        android:layout_toRightOf="@+id/drawer_list_item_imageView"
        android:layout_centerVertical="true" />

</RelativeLayout>
